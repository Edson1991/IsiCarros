
public class LojaVirtual {
	public static void main(String[] args) {
		Produto p1 = new Produto();
		Produto p2 = new Produto();
		Produto p3 = new Produto();	
		double precocomdesconto;
		
		p1.nome = "Cerveja";
		p1.preco = 3.50;
		p1.departamento = "Bebidas Alcoolicas";
		p1.codBarras = 1;
		
		p2.nome = "Coca-Cola 2L";
		p2.preco = 7.00;
		p2.departamento = "Bebidas Não Alcoolicas";
		p2.codBarras = 2;
		
		p3.nome = "Iphone 12";
		p3.preco = 7000.00;
		p3.departamento = "Smartphones";
		p3.codBarras = 3;
		
		System.out.println("----Produtos sem descontos-----");
		System.out.println("");
		p1.mostrarProduto();
		p2.mostrarProduto();
		p3.mostrarProduto();
		
		System.out.println("----BLACKFRIDAY-----");
		System.out.println("");
		
		
		System.out.printf("Cerveja com 10 PORCENTO de desconto saindo por: R$ %.2f%n",p1.aplicarDesconto(10.0));		
		System.out.printf("Coca-Cola 2L com 20 PORCENTO de deconto saindo por: R$ %.2f%n",p2.aplicarDesconto(20.0));		
		System.out.printf("Iphone 12 com 30 PORCENTO de desconto saindo por: R$ %.2f%n",p3.aplicarDesconto(30.0));

						
	}

}

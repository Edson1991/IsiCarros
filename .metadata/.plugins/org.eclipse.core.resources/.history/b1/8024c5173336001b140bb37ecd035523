
public class Banco {
	public static void main(String[] args) {

		ContaBancaria c1 = new ContaBancaria();
		ContaBancaria c2 = new ContaBancaria();

		/* Este trecho de código é para preencher os atritubos de cada um dos objetos */

		c1.setTitular("Edson");
		c1.setCpf("0123456789");
		c1.setNumeroConta(0001);
		c1.setSaldo(2500.00);

		c2.setTitular("Paola");
		c2.setCpf("987654321");
		c2.setNumeroConta(0002);
		c2.setSaldo(5000.00);

		System.out.println("---------------VALORES ATUAIS DAS CONTAS--------------------");
		System.out.println(c1.mostrarDadosConta());
		System.out.println(c2.mostrarDadosConta());

		System.out.println("---------------DEIXANDO SACAR VALOR DAS CONTAS--------------------");
		System.out.println("Sacando R$ 1000,00 das contas");

		if (c1.sacar(1000.00)) {
			c1.setSaldo(c1.getSaldo() - 1000.00);
			System.out.println("---------------testeeee-------------------");
			System.out.println(c1.mostrarDadosConta());
		}
	}
}


public class Posto {
	public static void main(String[] args) {

		BombaDeCombustivel b1 = new BombaDeCombustivel();
		
		System.out.println("---------------Inicialização da Bomba------------------\n");

		b1.setNomeCombustivel("---'");
		b1.setValorCombustivel(0);
		b1.setQtdLitros(0);
		b1.setValorTotal(0.00);
		
		System.out.println(b1.exibirResultado());	

		System.out.println("---------------Qual vai ser a boa hoje patrones?------------------\n");
		System.out.println("---------------Abastece 50 litros de alcool, por favor!------------------\n");
		
		b1.setNomeCombustivel("Alcool");
		b1.setValorCombustivel(3.00);
		b1.valorTotalLitros(50.00);		
		
		System.out.println(b1.exibirResultado());	
		
		System.out.println("---------------Qual vai ser a boa hoje madame?------------------\n");
		System.out.println("---------------Abastece R$50,00 de gasolina, por favor!------------------\n");
		
		b1.setNomeCombustivel("Gasolina");
		b1.setValorCombustivel(5.00);
		b1.setValorTotal(50.00);
		
		System.out.println(b1.exibirResultado());	
		
	}
}

//Classe de estrutura PRODUTO que contem: Nome, Departamento, Preço e Código de Barras

public class Produto {
	private int codBarras;
	private String nome;
	private String departamento;
	double preco;
	
	//Já que meus atributos estão blindados (encapsulados) precosamos de mecanismos para acessr
	// isso implica em uma funcionalida (metodo) para modificar seu valor e outro metodo para consultar seu valor
	
	void modificaNome(String novoNome) {
		nome = novoNome;
	}
	
	
	//Metodo para mostrar os produto
	void mostrarProduto() {
		System.out.println("Nome: "+nome);
		System.out.println("R$ "+preco);
		System.out.println("Código de Barras: "+codBarras);
		System.out.println("Departamento: "+departamento);
		System.out.println("");
		
	}
	
	//Metodo para aplicar desconto
	double aplicarDesconto (double desconto) {
		double precodesconto;
		precodesconto = preco - (preco*desconto/100);
	return precodesconto;
	}

}

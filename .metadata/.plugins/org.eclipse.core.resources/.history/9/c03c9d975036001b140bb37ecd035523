
public class BombaDeCombustivel {
	
	private String nomeCombustivel;
	private double valorCombustivel;
	private double qtdLitros;
	private double valorTotal;
	
	
	public String getNomeCombustivel() {
		return nomeCombustivel;
	}
	public void setNomeCombustivel(String nomeCombustivel) {
		this.nomeCombustivel = nomeCombustivel;
	}
	public double getValorCombustivel() {
		return valorCombustivel;
	}
	public void setValorCombustivel(double valorCombustivel) {
		this.valorCombustivel = valorCombustivel;
	}
	public double getQtdLitros() {
		return qtdLitros;
	}
	public void setQtdLitros(double qtdLitros) {
		this.qtdLitros = qtdLitros;
	}
	public double getValorTotal() {
		return valorTotal;
	}
	public void setValorTotal(double valorTotal) {
		this.valorTotal = valorTotal;
	}
	
	public String exibirResultado () {
		String resultado = "Nome do Combustivel: "+nomeCombustivel+ " -> Valor R$/l: "+valorCombustivel+"\nQtde de Litros: "+qtdLitros+ "\nValor Total: R$ "+String.format("%.2f\n",valorTotal);
		return resultado;	
	}
	
	//metodo informando litros para calcular valor total a ser pago
	
	public void valorTotalLitros (double litros) {
		valorTotal = litros*valorCombustivel;
	}
	
	//metodo informando valor total a ser pago para calcular qtde litros	
	
	public void litrosAbastecidoValor (double valor) {
		qtdLitros = valor/valorCombustivel;
	}
	
	
	
	
}
